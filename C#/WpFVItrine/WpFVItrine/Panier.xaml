<Window x:Class="WpFVItrine.Panier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:resx="clr-namespace:WpFVItrine"
        Title="Panier" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="12*"></RowDefinition>
        </Grid.RowDefinitions>

        <ListView x:Name="Paniers" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{x:Static resx:Resource1.Nom}" Width="80"></GridViewColumn>
                    <GridViewColumn Header="{x:Static resx:Resource1.Prix}" Width="80"></GridViewColumn>
                    <GridViewColumn Header="{x:Static resx:Resource1.Disponibitlite}" Width="70"></GridViewColumn>
                    <GridViewColumn Header="Rajouter" Width="70"></GridViewColumn>
                    <GridViewColumn Header="Enlever" Width="70"></GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="+"></Button>                            
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="-"></Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock HorizontalAlignment="Left" Margin="10,2,10,10" TextWrapping="Wrap" Text="User :" VerticalAlignment="Top" Height="21" Width="39"/>
        <Button Content="Payer" HorizontalAlignment="Left" Margin="200,0,10,1" Width="80" />
        <Button Content="Retour" HorizontalAlignment="Left" Margin="290,0,10,1" Width="80" />
        <TextBlock x:Name="Token"  HorizontalAlignment="Left" Margin="44,2,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="22" Width="69" Grid.RowSpan="2"/>
    </Grid>
</Window>
